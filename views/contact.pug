extends layout

block header-extensions
    script(src="//cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js")
    script(src="//cdn.jsdelivr.net/jquery.validation/1.15.1/additional-methods.min.js")
    script(src="/javascripts/contact.js")

block content
    h1 Contact Page

    form(action="/contact", method="post", class="form-horizontal", id="contactForm")
        fieldset 
            div(class="form-group")
                label(for="firstname", class="col-sm-2 control-label") Adınız :
                div(class="col-sm-10")
                    input(type="text", class="form-control", id="firstname", name="firstname", placeholder="Adınız", maxLength=50)

            div(class="form-group")
                label(for="lastname", class="col-sm-2 control-label") Soyadınız :
                div(class="col-sm-10")
                    input(type="text", class="form-control", id="lastname", name="lastname", placeholder="Soyadınız", maxLength=50)

            div(class="form-group")
                label(for="email", class="col-sm-2 control-label") E-posta Adresiniz :
                div(class="col-sm-10")
                    input(type="email", class="form-control", id="email", name="email", placeholder="E-posta", maxLength=75)


            div(class="form-group")
                label(for="subject", class="col-sm-2 control-label") Başlık :
                div(class="col-sm-10")
                    input(type="text", class="form-control", id="subject", name="subject", placeholder="Başlık", maxLength=100)


            div(class="form-group")
                label(for="comment", class="col-sm-2 control-label") Açıklama :
                div(class="col-sm-10")
                    textarea(class="form-control", id="comment", name="comment", placeholder="Açıklama", maxLength=1000)


            div(class="form-group")
                div(class="col-sm-2 control-label") 
                div(class="col-sm-10")
                    input(type="submit", class="btn btn-default", id="submitButton", name="submitButton", value="Gönder")
                    input(type="reset", class="btn btn-default", id="resetButton", name="resetButton", value="Temizle")